{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": [
      "es2015"
    ],
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "types": ["node"]
  },
  "include": [
    "lib/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "typeRoots": [
    "../node_modules/@types/index.d.ts"
  ],

}